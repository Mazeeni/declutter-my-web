{
  "manifest_version": 2,
  "name": "Verge Declutterer",
  "version": "1.0",

  "description": "Declutter article pages on theverge.com, allowing for distraction-free and customisable reading.",
  "homepage_url": "https://github.com/Mazeeni/wired-declutterer",
  "icons": {
    "48": "icons/wire-cutter.svg",
    "96": "icons/wire-cutter.svg"
  },

  "permissions": ["activeTab", "tabs", "storage"],

  "browser_action": {
    "default_icon": "icons/wire-cutter.svg",
    "default_title": "Wire Declutterer",
    "default_popup": "control-popup/control-popup.html"
  }
}
