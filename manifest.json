{
  "manifest_version": 2,
  "name": "Verge Declutterer",
  "version": "1.0",

  "description": "Declutter article pages on theverge.com, allowing for distraction-free and customisable reading.",
  "homepage_url": "https://github.com/Mazeeni/verge-declutterer",
  "icons": {
    "48": "src/icons/wire-cutter.svg",
    "96": "src/icons/wire-cutter.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "doesntmatter@example.com",
      "strict_min_version": "42.0"
    }
  },

  "permissions": ["activeTab", "menus", "storage", "tabs"],

  "browser_action": {
    "default_icon": "src/icons/wire-cutter.svg",
    "default_title": "Wire Declutterer",
    "default_popup": "src/popup.html"
  },

  "page_action": {
    "default_popup": "src/filterPopup.html"
  },

  "background": {
    "scripts": ["src/js/background.js"]
  }
}
